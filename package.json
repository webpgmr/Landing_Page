{
  "name": "tailwind-html-project",
  "version": "1.0.0",
  "description": "A project using Tailwind CSS with pixel-perfect design for multiple breakpoints.",
  "main": "index.js",
  "scripts": {
    "build": "postcss src/styles/tailwind.css -o public/styles.css",
    "build:css": "npx tailwindcss -i ./src/styles/tailwind.css -o ./public/tailwind.css --watch",
    "watch": "postcss src/styles/tailwind.css -o public/styles.css --watch",
    "dev": "npm run build:css",
    "serve": "serve public"
  },
